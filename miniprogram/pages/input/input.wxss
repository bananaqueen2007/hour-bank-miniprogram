.container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding: 30rpx;
}

.header {
  text-align: center;
  margin: 40rpx 0 60rpx 0;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
}

.form-item {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.label {
  display: block;
  font-size: 32rpx;
  color: #666;
  margin-bottom: 20rpx;
  font-weight: 500;
}

input {
  width: 100%;
  font-size: 36rpx;
  color: #333;
  padding: 10rpx 0;
}

.placeholder {
  color: #999;
  font-size: 32rpx;
}

.submit-btn {
  background-color: #07c160;
  color: white;
  font-size: 36rpx;
  padding: 30rpx;
  border-radius: 50rpx;
  margin-top: 60rpx;
  box-shadow: 0 4rpx 10rpx rgba(7, 193, 96, 0.3);
}

.submit-btn:active {
  opacity: 0.8;
}

.tips {
  margin-top: 40rpx;
  text-align: center;
}

.tips-text {
  font-size: 28rpx;
  color: #999;
}